<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsc4"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lat.ta.ujianpemrograman.PilihActionActivity">

    <Button
        android:id="@+id/bt_mulai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:text="Kerjakan" />

    <Button
        android:id="@+id/bt_nilaiakhir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_mulai"
        android:layout_alignEnd="@+id/bt_mulai"
        android:layout_alignRight="@+id/bt_mulai"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:text="Nilai Akhir" />

    <Button
        android:id="@+id/bt_materi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_nilaiakhir"
        android:layout_alignEnd="@+id/bt_nilaiakhir"
        android:layout_alignRight="@+id/bt_nilaiakhir"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        android:background="#ffffff"
        android:text="Materi" />
</RelativeLayout>
